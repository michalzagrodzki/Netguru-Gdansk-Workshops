source 'https://rubygems.org'

# Rails version
gem 'rails', '4.1.10'

# Gem for database - Postgres SQL
gem 'pg', '~> 0.18.0.pre20141117110243'

# Gem for users with different levels of access
gem 'devise', '~> 3.4.1'

# Gem for encrypting passwords, better than standard md5
gem 'bcrypt', '~> 3.1.7'

gem 'therubyracer', platforms: :ruby
gem 'sass-rails', github: 'rails/sass-rails'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'draper'
gem 'decent_exposure'
gem 'decent_decoration'
gem 'simple_form', '~> 3.1.0rc'
gem 'bootstrap-sass', '~> 3.1.0'
gem 'haml-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0',          group: :doc

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin]

# SImplify logs in console
gem 'quiet_assets'

####################

# Gems related to development environment
group :development do
  gem 'spring'
end

# Gems related to production environment
group :production do
  gem 'rails_12factor'
end

# Ruby version, required for Heroku install
ruby '2.1.5'
